function panelSystem()
{
  beginPanel($panel);
  panelHeader($panel, "system");
  panelRow($panel,"<a href='?stats'>statistik</a>");
  panelRow($panel,"<a href='?backup'>backup</a>");
  panelRow($panel,"<a href='?restore'>backup einspielen</a>");
  if (sysClosed())
    panelRow($panel,"<a href='?opensys' style='color: #00A000'>freigeben</a>");
  else
    panelRow($panel,"<a href='?closesys' style='color: #A00000'>sperren</a>");
  panelRow($panel,"<a href='?reset'>reset</a>");
  panelRow($panel,"<a href='?drop-results'>ergebnisse löschen</a>");
  endPanel($panel);
  return $panel;
}

?>


<script language="Javascript" type="text/javascript">	       
	  function buttonDisabledNewBank(){
		if(document.bank.id.value.length>5 && document.bank.bezeichnung.value.length>4 && document.bank.klasse.value.length>4){
		        document.bank.speichern.disabled = false;
		}else{
			 document.bank.speichern.disabled = true;
		}
	  }
	  
	  function selectChangeQuestion(){
			if(document.question.display.options[1].selected == true || document.question.display.options[3].selected == true
			     || document.question.display.options[4].selected == true || document.question.display.options[5].selected == true){   
				 document.question.answers.disabled = false;
			 }else{
			  document.question.answers.disabled = true;
			 }
			buttonDisabledNewQuestion();
	   }

	  function buttonDisabledNewQuestion(){

		if(document.question.text.value.length > 4){
			document.question.speichern.disabled = false;
		}else{
			document.question.speichern.disabled = true;
		}
	  }

</script>