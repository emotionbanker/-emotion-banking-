  echo "<tr><td>&nbsp;</td><td><input type='submit' name='speichern'  value='-> speichern' /></td></tr>";
  echo "</table>";
  echo "</form>";
}

function createBankForm($update=false,$id="",$bez="",$class="")
{
  if (!$update)
    echo "<h1>neue Bank erstellen</h1>";
  else
    echo "<h1>Bank bearbeiten</h1>";
  echo "<h2>bitte die Daten der Bank eintragen</h2>";
  if (!$update)
    echo "<form name='bank' action='?create-bank=true' method='post'>";
  else
    echo "<form name='bank' action='?update-bank=".$id."' method='post'>";
  echo "<table>";
  echo "<tr><td>Bank id:</td><td> <input type='text' name='id' maxlength='6' size='6' onkeyup='buttonDisabledNewBank()' placeholder='ZZZZZZ' value='".$id."' ";
  if ($update) echo "disabled ";
  echo "/> (6-stellig)</td></tr>";
  echo "<tr><td>Bezeichnung:</td><td> <input type='text' name='bezeichnung' maxlength='60' size='50' placeholder='TestBank Emotion' onkeyup='buttonDisabledNewBank()' value='".$bez."' /> (min. 5 - max. 60 Zeichen)</td></tr>";
  echo "<tr><td>Klasse:</td><td> <input type='text' name='klasse' maxlength='60' size='50' placeholder='TestBank Emotion' onkeyup='buttonDisabledNewBank()' value='".$class."' /> (min. 5 - max. 60 Zeichen)</td></tr>";
   if (!$update)
	echo "<tr><td>&nbsp;</td><td><input type='submit' value='-> speichern' name='speichern' disabled='disabled'/></td></tr>";
  else
	echo "<tr><td>&nbsp;</td><td><input type='submit' value='-> speichern' name='speichern'/></td></tr>";
  echo "</table>";
  echo "</form>";
}

