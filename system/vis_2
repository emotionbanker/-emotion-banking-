function createQuestionForm($update=false,$id="",$text="",$display="",$answers="",$search="")
{
  if (!$update)
    echo "<h1>neue Frage erstellen</h1>";
  else
    echo "<h1>Frage bearbeiten</h1>";
    
  echo "<h2>bitte die Frage eintragen</h2>";
  
  if (!$update)
    echo "<form name='question' action='?create-question=true' method='post'>";
  else
    echo "<form name='question' action='?update-question=".$id."' method='post'>";
  
  echo "<table>";
  
  echo "<tr><td>text:</td><td><textarea name='text' lines='1' cols='91' rows='5' placeholder='min. 5 Zeichen' onkeyup='buttonDisabledNewQuestion()' style='resize: none;'>". $text ."</textarea></td></tr>";
  
  echo "<tr><td>art der frage:</td><td><select name='display' style=width:570px onchange='selectChangeQuestion()'>";
  echo "<option value='text' ";  if ($display=="text") echo "selected "; echo ">freie antwort (textfeld)</option>";
  echo "<option value='radio' "; if ($display=="radio") echo "selected "; echo ">auswahl (radio buttons)</option>";
  echo "<option value='multitext' "; if ($display=="multitext") echo "selected "; echo ">mehrere freie antworten (textfelder)</option>";
  echo "<option value='multi' "; if ($display=="multi") echo "selected "; echo ">mehrfachauswahl(unlimited) (tickboxes)</option>";
  //echo "<option value='multi2' "; if ($display=="multi2") echo "selected "; echo ">mehrfachauswahl(2) (tickboxes)</option>";
  //echo "<option value='multi3' "; if ($display=="multi3") echo "selected "; echo ">mehrfachauswahl(3) (tickboxes)</option>";  
  echo "</select></td></tr>";
  if (!$update)
    echo "<tr><td>antwortmöglichkeiten<br/> (durch ';' getrennt):</td><td><input type='text' name='answers' size='90' disabled='disabled' value='".$answers."'/></td></tr>";
  else
    echo "<tr><td>antwortmöglichkeiten<br/> (durch ';' getrennt):</td><td><input type='text' name='answers' size='90' value='".$answers."'/></td></tr>";

  echo "<tr><td>suchkürzel:</td><td><input type='text' name='search' size='90' value='".$search."'/></td></tr>";
  if (!$update)
      echo "<tr><td>&nbsp;</td><td><input type='submit' name='speichern' disabled='disabled' value='-> speichern' /></td></tr>";
  else
      echo "<tr><td>&nbsp;</td><td><input type='submit' name='speichern' value='-> speichern' /></td></tr>";
  
  echo "</table>";
  
  echo "</form>";
}

function chooseFormForm()
{
   
  echo "<h1>fragebögen bearbeiten</h1>";
  echo "<h2>bitte einen fragebogen auswählen</h2>";
  
  if(!isset($_POST['filterButton']))
	$blist = getBankList();
  else
	$blist = getBankListFilter($_POST['filterBank']);

  $classes = array();
  foreach ($blist as $bank)
  {
    if (!in_array($bank[2], $classes))
      $classes[] = $bank[2];
  }
  $ulist = getUsergList();
  
  if(isset($_POST['filterButton'])){
	echo "<form name='chooseFormForm' action='?choose-form' method='post'>";
	echo '<input value="Zurücksetzen" name="zurück" id="zurück" class="taste" type="submit"  method="post"/>';
	
   }
   
  echo "<form name='chooseFormForm' action='' method='post'>";
  echo "<input type='text' name='filterBank' size='30' placeholder='Bank'/>";
  echo "<input value='Filter' name='filterButton' id='filterButton' class='taste' type='submit'  method='post'/>";
  echo "</form>";
  echo "<form action='?form-edit=true' method='post'>";
  echo "<table>";
  
  echo "<tr>";
  echo "<td>bank:</td>";
  echo "<td>";
  echo "<select name='class'>";
  
  foreach ($classes as $class)
    echo "<option value='".$class."'>" . $class ."</option>";
  
  echo "</select>";
  echo "</td>";
  echo "</tr>";
  
  echo "<tr>";
  echo "<td>benutzergruppe:</td>";
  echo "<td>";
  echo "<select name='userg'>";
  
  foreach ($ulist as $user)
    echo "<option value='".$user[0]."'>" . $user[1] . "</option>";
  
  echo "</select>";
  echo "</td>";
  echo "</tr>";
  
  // echo "<tr>";
  // echo "<td>suchkürzel:</td><td><input type='text' name='search' /></td>";
  // echo "</tr>";
  
  echo "<tr>";
  // echo "<td>&nbsp;</td>";
  echo "<td>";
  echo "<input type='submit' value='-> bearbeiten' />";
  echo "</td>";
  echo "</tr>";
  
  echo "</table>";
  
  echo "</form>";
 
}

